    @Override
    public void stop() {
        try {
            queue.take();
        } catch (InterruptedException e) {
            e.printStackTrace();
        }
        
    }
    

    
    @Override
    public void addTask(Object object) { 

        try {
            queue.put(object);
        } catch (InterruptedException e) {
            e.printStackTrace();
        }
    }
    

	@Override
	public void run() {
		// TODO Auto-generated method stub
		
	}

